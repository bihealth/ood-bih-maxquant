<%-
  cpus = bih_cpus.to_i
  mem = bih_mem.to_i
  days = bih_days.to_i
-%>
---
batch_connect:
  template: vnc
  script_wrapper: |
    set -x
    cat << "EOF" >container.sh
    set -x
    %s
    EOF
    chmod +x container.sh
    echo "==="
    cat container.sh
    echo "==="
    export SINGULARITY_BINDPATH="/fast,/data/gpfs-1,/opt/ood,/srv,/var,/run/user/$(id -u)"
    export WEBSOCKIFY_CMD=websockify
    singularity run /opt/ood/singularity-images/bih-maxquant-2.0.3.0.sif $PWD/container.sh

script:
  native:
    - "--cpus-per-task"
    - "<%= cpus %>"
    - "--mem"
    - "<%= mem * 1024 %>"
    - "--partition"
    - "<%= bih_partition %>"
    - "--time"
    - "<%= days %>-0"
